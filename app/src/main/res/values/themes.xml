<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CashBash" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/purple_main</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your light theme here. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/cian</item>
    </style>

    <!-- ActionBar -->
    <style name="Base.Theme.ActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_main</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Toolbar для fragment_image_list-->
    <style name="ToolbarTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="Theme.CashBash" parent="Base.Theme.CashBash" />
</resources>